{
    "compilerOptions": {
        "outDir": "dist",
        "module": "NodeNext",
        "lib": ["ES2022"],
        "target": "ES2022",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "baseUrl": ".",
        "types": ["node"],
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": false,
        "strict": true,
        "noImplicitAny": false,
        "alwaysStrict": true,
        "allowUnreachableCode": true,
    },
    "include": ["./src/*.ts"]
}
